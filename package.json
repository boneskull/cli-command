{
  "name": "cli-command",
  "version": "0.8.139",
  "description": "Command execution for cli programs",
  "author": "muji <noop@xpm.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/freeformsystems/cli-command"
  },
  "bugs": {
    "url": "https://github.com/freeformsystems/cli-command/issues",
    "email": "muji <noop@xpm.io>"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/freeformsystems/cli-command/blob/master/LICENSE"
    }
  ],
  "keywords": [
    "cli",
    "parse",
    "option",
    "argument",
    "command"
  ],
  "dependencies": {
    "circular": "~1.0.3",
    "cli-argparse": "~0.3.7",
    "cli-define": "^0.5.32",
    "cli-env": "^1.0.7",
    "cli-error": "~0.5.0",
    "cli-fs": "~1.0.3",
    "cli-logger": "~0.5.14",
    "cli-native": "~1.0.0",
    "cli-util": "~1.1.13",
    "markzero": "^0.1.22",
    "moment": "2.5.1"
  },
  "devDependencies": {
    "cli-rc": "~1.0.1",
    "ttycolor": "~0.8.10",
    "mocha": "~1.17.0",
    "chai": "~1.9.0",
    "istanbul": "~0.2.6"
  },
  "engine": [
    "node >= 0.10.21"
  ],
  "scripts": {
    "build": "mdp --force -v",
    "clean": "rm -f ./log/*.log; rm -f .man/*",
    "permrm": "chmod -r test/unit/rc/eaccess.json",
    "permadd": "chmod +r test/unit/rc/eaccess.json",
    "test": "npm run clean; npm run permrm; istanbul cover _mocha -- -u bdd --recursive --bail --reporter list -A test/unit/; npm run permadd"
  },
  "mdp": {
    "title": "Command",
    "pedantic": true,
    "include": "doc/readme",
    "require": "lib",
    "links": "links.md",
    "toc": "Table of Contents",
    "base": "https://github.com/freeformsystems/cli-command",
    "partial": [
      {
        "inc": [
          "introduction.md",
          "install.md",
          "test.md",
          "examples.md"
        ]
      },
      {
        "inc": [
          "configuration.md",
          "help.md",
          "version.md",
          "types.md",
          "commands.md"
        ]
      },
      {
        "title": "Executable Commands",
        "text": "If you wish to structure your program as a series of executables for each command ([git][git] style) use the alternative syntax:",
        "inc": "../../ebin/example/pkg",
        "type": "code",
        "language": "javascript",
        "footer": "Source: [pkg][pkg]"
      },
      {
        "inc": [
          "errors.md",
          "api.md",
          "conflicts.md",
          "enumerate.md",
          "interface.md"
        ]
      },
      {
        "title": "Reserved Keywords",
        "bin": "./ebin/reserved"
      },
      {
        "inc": [
          "credits.md",
          "license.md"
        ]
      }
    ]
  }
}
