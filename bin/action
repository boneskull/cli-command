#!/usr/bin/env node

/**
 *  Example subcommand action callback.
 *
 *  ./bin/action print
 *  ./bin/action print [...]
 *  ./bin/action [...] print
 */
var path = require('path');
require('ttycolor')().defaults();
var pkg = path.normalize(path.join(__dirname, '..', 'package.json'));
var cli = require('..')(pkg);
cli.version().help()
  .action(function(cmd, help, version) {
    help.call(this);
  })
cli.command('print')
  .description('print command line arguments')
  .action(function(cmd, opts, raw) {
    console.log(this._name + ' %s %s', cmd._name, raw.join(' '));
  });
cli.parse();
