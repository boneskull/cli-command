#!/usr/bin/env node

/**
 *  Example program to test vanilla help output.
 *
 *  ./bin/help/vanilla
 *  ./bin/help/vanilla -h
 *  ./bin/help/vanilla --help
 */
var path = require('path');
require('ttycolor')().defaults();
var pkg = path.normalize(path.join(__dirname, '..', '..', 'package.json'));
var cli = require('../..')(pkg, 'help/vanilla');
cli
  .configure({help: {vanilla: true}})
  .usage('[options] <command> <package...>')
  .command('install, ins, i', 'install packages')
  .command('publish, pub, p',
    'publish packages to the registry creating a new package version')
  .command('update, up, u', 'update dependencies')
  .command('list, ls', 'list dependencies')
  .command('pack, pk', 'create archive')
  .option('-r --registry [url]', 'registry url')
  .option('-v --verbose', 'print more information')
  .option('-f --force', 'force overwrite')
  .option('-d --debug', 'enable debugging')
  .version()
  .help()
  .on('empty', function(help, version) {
    help.call(this);
  })
  .parse();
